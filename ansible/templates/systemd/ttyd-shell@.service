[Unit]
Description=ttyd-shell instance %I

[Service]
User={{ ansible_env.SUDO_USER or ansible_user_id }}
Group=www-data
RuntimeDirectory=ttyd-container
UMask=0002
ExecStart=/opt/ttyd -i /run/ttyd-container/%i-shell.sock -t fontSize=14 -t disableLeaveAlert=true tmux -2 -L %i set -g default-command "incus exec %i -t -- bash" \; new -A -D -s %i
Type=simple
Restart=always

[Install]
WantedBy=default.target
